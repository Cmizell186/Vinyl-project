mixin validationErrorSummary(errors)
  if errors
    div(class='alert' role='alert')
      p The following error(s) occurred:
      ul
        each error in errors
          li= error

mixin field(className, labelText, fieldName, fieldValue, fieldType = 'text', placeholder)
  label(for=fieldName)= labelText
  input(class=className type='text', id=fieldName name=fieldName value=fieldValue placeholder=placeholder)
